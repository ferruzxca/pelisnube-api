<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PelisNubeMobile.Pages.ForgotPasswordPage"
             Title="Recuperar contrase침a"
             BackgroundColor="#111827">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="10">
            <Label Text="Recuperar contrase침a" FontSize="26" FontAttributes="Bold" TextColor="White" />
            <Label Text="1) Solicita OTP por correo  2) Verifica c칩digo  3) Cambia contrase침a"
                   TextColor="#A5B4FC"
                   FontSize="12" />

            <Entry x:Name="EmailEntry"
                   Placeholder="Correo"
                   Keyboard="Email"
                   TextColor="White"
                   PlaceholderColor="#9CA3AF"
                   TextChanged="OnEmailChanged" />
            <Button x:Name="RequestOtpButton"
                    Text="1) Solicitar OTP"
                    Clicked="OnRequestOtpClicked"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    CornerRadius="12" />

            <Entry x:Name="CodeEntry"
                   Placeholder="Codigo OTP (6 digitos)"
                   Keyboard="Numeric"
                   TextColor="White"
                   PlaceholderColor="#9CA3AF"
                   IsEnabled="False" />
            <Button x:Name="VerifyOtpButton"
                    Text="2) Verificar OTP"
                    Clicked="OnVerifyOtpClicked"
                    BackgroundColor="#6D28D9"
                    TextColor="White"
                    CornerRadius="12"
                    IsEnabled="False" />

            <Entry x:Name="NewPasswordEntry"
                   Placeholder="Nueva contrasena"
                   IsPassword="True"
                   TextColor="White"
                   PlaceholderColor="#9CA3AF"
                   IsEnabled="False" />
            <Button x:Name="ResetPasswordButton"
                    Text="3) Cambiar contrasena"
                    Clicked="OnResetPasswordClicked"
                    BackgroundColor="#EC4899"
                    TextColor="White"
                    CornerRadius="12"
                    IsEnabled="False" />

            <ActivityIndicator x:Name="BusyIndicator" IsVisible="False" IsRunning="False" Color="#EC4899" />
            <Label x:Name="ResultLabel" TextColor="#FDBA74" FontSize="13" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
