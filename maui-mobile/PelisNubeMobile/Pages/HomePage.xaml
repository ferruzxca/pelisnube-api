<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PelisNubeMobile.Pages.HomePage"
             Title="Inicio"
             BackgroundColor="#090B1A">
    <RefreshView IsRefreshing="{Binding IsLoading}" Command="{Binding RefreshCommand}">
        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="14">
                <Label Text="Destacados" FontSize="24" FontAttributes="Bold" TextColor="White" />

                <CarouselView x:Name="FeaturedCarousel"
                              HeightRequest="230"
                              ItemsSource="{Binding FeaturedItems}">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Border StrokeThickness="0" StrokeShape="RoundRectangle 20" BackgroundColor="#1B1F3B">
                                    <Grid>
                                        <Image Source="{Binding BannerDisplayUrl}" Aspect="AspectFill" />
                                        <Grid BackgroundColor="#66000000" VerticalOptions="End" Padding="12">
                                            <VerticalStackLayout>
                                                <Label Text="{Binding Title}" TextColor="White" FontAttributes="Bold" FontSize="16" />
                                                <Label Text="{Binding Type}" TextColor="#D1D5DB" FontSize="12" />
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Grid>
                                </Border>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnContentTapped" CommandParameter="{Binding .}" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>

                <IndicatorView IndicatorColor="#6B7280"
                               SelectedIndicatorColor="#EC4899"
                               HorizontalOptions="Center"
                               IndicatorsShape="Circle"
                               IndicatorSize="8"
                               MaximumVisible="8"
                               Margin="0,-8,0,0"
                               ItemsSource="{Binding FeaturedItems}" />

                <Label Text="Secciones" FontSize="22" FontAttributes="Bold" TextColor="White" Margin="0,10,0,0" />

                <CollectionView ItemsSource="{Binding Sections}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="8" Margin="0,4,0,12">
                                <Label Text="{Binding Name}" TextColor="#F9FAFB" FontAttributes="Bold" FontSize="18" />
                                <Label Text="{Binding Description}" TextColor="#9CA3AF" FontSize="12" />
                                <CollectionView ItemsSource="{Binding Items}" ItemsLayout="HorizontalList" HeightRequest="215" SelectionMode="None">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid WidthRequest="145" Margin="0,0,10,0">
                                                <Border StrokeThickness="0" StrokeShape="RoundRectangle 14" BackgroundColor="#171B38">
                                                    <Grid>
                                                        <Image Source="{Binding PosterDisplayUrl}" Aspect="AspectFill" HeightRequest="180" />
                                                        <Grid BackgroundColor="#66000000" VerticalOptions="End" Padding="8">
                                                            <Label Text="{Binding Title}" TextColor="White" FontSize="12" LineBreakMode="TailTruncation" />
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                                <Grid.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="OnContentTapped" CommandParameter="{Binding .}" />
                                                </Grid.GestureRecognizers>
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label x:Name="ErrorLabel" TextColor="#FCA5A5" FontSize="12" />
            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>
