<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PelisNubeMobile.MainPage"
             Title="Ferruzca Play"
             BackgroundColor="#0F1226">

    <ScrollView>
        <VerticalStackLayout
            Padding="24,28"
            Spacing="14">
            <Label
                Text="Ferruzca Play"
                FontSize="34"
                FontAttributes="Bold"
                TextColor="#F7F4FF" />

            <Label
                Text="Tu app personalizada de peliculas y series."
                TextColor="#B2B7DB"
                FontSize="16"
                SemanticProperties.HeadingLevel="Level1" />

            <Border Stroke="#2B2F4D"
                    StrokeThickness="1"
                    BackgroundColor="#171B38"
                    StrokeShape="RoundRectangle 16"
                    Padding="14"
                    Margin="0,12,0,0">
                <Label Text="Branding actualizado: icono, splash, colores y nombre."
                       TextColor="#E5E7EB"
                       FontSize="14" />
            </Border>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
